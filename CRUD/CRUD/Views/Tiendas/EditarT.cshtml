@model CRUD.Models.ViewModels.TiendasViewModel
@{
    ViewBag.Title = "Editar Tienda";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("EditarT", "Tiendas", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(d=>d.ID)
            <br />
            <div>
                @Html.LabelFor(d => d.Nombre)
                @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Nombre, null, new { @class = "danger" })<br />
            </div>
            <div>
                <br />
                @Html.LabelFor(d => d.Fecha_de_Apertura)<br />
                @Html.EditorFor(d => d.Fecha_de_Apertura, "", new { @class = "form-control" })<br />
                @Html.ValidationMessageFor(d => d.Fecha_de_Apertura, null, new { @class = "danger" })
            </div>
            <div style="text-align:right">
                <input value="Confirmar" class="btn btn-primary" type="submit" />
            </div>
        </div>
    </div>
}
